<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thepascal.soccerstats">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_soccer_ball"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.thepascal.soccerstats.view.activities.BetListActivity"></activity>
        <activity android:name="com.thepascal.soccerstats.view.activities.StandingsActivity" />
        <activity android:name="com.thepascal.soccerstats.view.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.thepascal.soccerstats.view.activities.BetActivity" />
        <activity android:name="com.thepascal.soccerstats.view.activities.TeamStatsActivity" />
        <activity android:name="com.thepascal.soccerstats.view.activities.MainActivity_2" />
    </application>

</manifest> <!-- launcher -->